    <main>
      
      <div class="content">
	<div class="account-container">
	  
	  
	  <% if (isOwner) { %>
	  <h1 class="title">Welcome <%= account.name.first %></h1>
	  <% } else { %>
	  <h1 class="title"><%= account.username %>'s profile</h1>
	  <% } %>

	  <hr>

