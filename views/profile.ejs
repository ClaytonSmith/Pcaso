	    <div class="pure-u-1-3"><p>Comments</p></div>
	    <div class="pure-u-1-3"><p>Stats</p></div>
	  </div>	  

	</div> 
      </div>
      
    </main>
    <%- include footer.ejs %>  
  </body>  
</html>
