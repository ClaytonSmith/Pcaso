<!doctype html>
<html>
  <%- include head.ejs %>  
  <body>
    <%- include header.ejs %>      
    <main>
      <script src="/js/index-controller.js"></script>  
      
      <div class="splash-container" style="height: 100%;">
	<div class="splash">
          <h1 class="splash-head"><span class="pcaso"></span></h1>
          <p class="splash-subhead" style="text-transform: none;">
            <i>Paint, share, and explore datascapes</i>
          </p>

	  <div id="datascape-preview-container">
	    <div class="pure-g">
	      <div class="pure-u-1-3" id="tile-left">
	      </div>
	      
	      <div class="pure-u-1-3" id="tile-center">
	      </div>
	      
	      <div class="pure-u-1-3" id="tile-right">
	      </div>
	    </div>
	  </div>
	  
          <p>
	    
	    <% if (user) { %>
	    
            <a href="/upload" class="pure-button pure-button-success lets-go"><i class="fa fa-paint-brush"></i> Paint new datascape</a>
	    
	    <% } else { %>
	    
	    <a href="/sign-in" class="pure-button pure-button-success lets-go">Sign in to paint new datascape</a>

	    <% } %>
          </p>
	</div>
      </div>
      
    </main>
  </body>  
</html>
